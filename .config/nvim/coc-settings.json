{
  "solargraph.useBundler": false,
  "solargraph.completion": true,
  "solargraph.hover": true,
  "solargraph.references": true,

  "suggest.autoTrigger": "always",
  "suggest.triggerAfterInsertEnter": false,
  "suggest.minTriggerInputLength": 2,
  "suggest.snippetIndicator": "â–º",
  "suggest.noselect": false,
  "suggest.preferCompleteThanJumpPlaceholder": true,
  "suggest.maxPreviewWidth": 120,
  "suggest.previewIsKeyword": "",
  "suggest.maxCompleteItemCount": 20,
  "suggest.languageSourcePriority": 120,

  "coc.preferences.enableFloatHighlight": true,
  "coc.preferences.hoverTarget": "float",

  "coc.source.emoji.enable": true,
  "coc.source.emoji.filetypes": ["markdown"],

  "coc.source.neosnippet.priority": 110,

  "languageserver": {
    "elmLS": {
      "command": "elm-language-server",
      "filetypes": ["elm"],
      "rootPatterns": ["elm.json"],
      "initializationOptions": {
        "elmPath": "elm",
        "elmFormatPath": "elm-format",
        "elmTestPath": "elm-test",
        "elmAnalyseTrigger": "change"
      }
    }
  },

  "eslint.autoFixOnSave": true,
  "eslint.filetypes": ["javascript", "javascriptreact", "typescript", "typescriptreact", "vue"],

  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue"
  ],

  "go.goplsOptions": {
    "completeUnimported": true
  }
}
